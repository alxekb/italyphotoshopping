= bootstrap_form_for @package do |f|
  - if @package.errors.any?
    #error_explanation
      %h2= "#{pluralize(@package.errors.count, "error")} prohibited this package from being saved:"
      %ul
        - @package.errors.full_messages.each do |message|
          %li= message

  .field
    = f.select :user_id, Profile.order(:name).map { |p| [p.name, p.id]}, prompt: true
  .field
    = f.select :item_id, Deal.order(:id).map { |d| [[d.id, d.profile.name, d.item.name].join(' '), d.id] }, prompt: true
  .field
    = f.number_field :shipping_type, placeholder: 'boxberry'
  .field
    = f.number_field :pup_code
  .field
    = f.number_field :h, placeholder: '21 (cm)'
  .field
    = f.number_field :w, placeholder: '18 (cm)'
  .field
    = f.number_field :l, placeholder: '12 (cm)'
  .field
    = f.number_field :weight, placeholder: '1200 (gr)'
  .field
    = f.text_field :tracking_code
  .field
    = f.text_field :shipping_status
  .field
    = f.check_box :active
  .actions
    = f.submit 'Save'
