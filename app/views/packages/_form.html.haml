= bootstrap_form_for @package do |f|
  - if @package.errors.any?
    #error_explanation
      %h2= "#{pluralize(@package.errors.count, "error")} prohibited this package from being saved:"
      %ul
        - @package.errors.full_messages.each do |message|
          %li= message

  .field
    = f.select :profile_id, Profile.order(:name).map { |p| [p.name, p.id]}, prompt: true, label: 'Профиль пользователя'
  .field
    = f.select :item_id, Deal.order(:id).map { |d| [[d.id, d.profile.name, d.item.name].join(' '), d.id] }, prompt: true, label: 'Лот'
  .field
    = f.number_field :shipping_type, placeholder: 'boxberry', label: 'Тип отправления'
  .field
    = f.number_field :pup_code, label: 'Какой-то PUP...', placeholder: 'pup_code'
  .field
    = f.number_field :h, placeholder: '21 (cm)', label: 'Высота в см'
  .field
    = f.number_field :w, placeholder: '18 (cm)', label: 'Ширина в см'
  .field
    = f.number_field :l, placeholder: '12 (cm)', label: 'Длина в см'
  .field
    = f.number_field :weight, placeholder: '1200 (gr)', label: 'Вес в гр'
  .field
    = f.text_field :tracking_code, label: 'Трек код', placeholder: '1234567890'
  .field
    = f.text_field :shipping_status, label: 'Статус отправления', placeholder: 'Подготовка документов'
  .field
    = f.check_box :active, label: 'Статус'
  .actions
    = f.submit 'Save', class: 'button btn btn-outline-secondary btn-block'
