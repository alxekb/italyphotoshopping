.container
  %p#notice= notice
  .card
    .card-header
      %a.badge.badge-primary{href: "#{@package.label}", target: "_blank"} Этикетка

    .card-body
      %p
        id Посылки
        = @package.id
      %p
        Profile
        = @package.profile_id
      %p
        Shipping type
        = @package.shipping_type
      %p
        PUP
        = @package.pup_code
      %p
        H:
        = @package.h
        W:
        = @package.w
        L:
        = @package.l
        Вес:
        = @package.weight

      %p
        Трек-код
        = @package.tracking_code
      - @status.each do |s|
        = s["Date"]
        = s["Name"]
        = s["Comment"]
        %br
      %a.badge.badge-success{:href => wa_message(@package.profile.phone, "#{@package.profile.name}, добрый день! Стоимость доставки посылки №#{@package.tracking_code} - #{@cost["price"]} EUR (зона #{@cost["tariff_zone"]}). Подскажите, пожалуйста, Вы сможете сделать перевод Екатерине как обычно?"), target: "_blank" } WA стоимость отправки #{@cost["price"]}
      %p= "#{@package.package_cost} EUR"
      %p
        Boxberry API
        = @cost
      %p
        Номер коробки
        = @package.shipping_status
      %p
        Активный? #{human_boolean(@package.active)}
      %p
        Оплата доставки #{human_boolean(@package.delivery_paid)}
      %p
        N Профиля
        = @package.profile_id
      %p
        City code
        = @package.city_code
      -# - if @deals.count.nil?
      -#   %p Нет сделок
      -# - else
    .card-footer
      - @deals.each do |deal|
        .label
          = link_to "##{deal.item.id} #{deal.item.item_name.name} #{deal.item.brand.name} #{deal.item.color.name}", item_path(deal.item), target: '_blank'
          = link_to deal.profile.full_name, profile_path(deal.profile)
          = link_to deal.id, deal_path(deal)
  -# %p
  -#   %b User:
  -#   -# = @package.user_id
  -#   = @profile.name
  -# %p
  -#   %b Item:
  -#   -# = @package.item_id
  -#   = @item.item
  -#   = @item.brand
  -#   = @user.email
  -# %p
  -#   %b Shipping type:
  -#   = @package.shipping_type
  -# %p
  -#   %b Pup code:
  -#   = @package.pup_code
  -# = link_to('Запросить документы', controller: 'packages', action: "parcel_create_foreign")
  = link_to 'Edit', edit_package_path(@package)
  \|
  = link_to 'Back', packages_path
