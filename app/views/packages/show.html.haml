.container
  %p#notice= notice
  .card
    .card-header
      %a.badge.badge-primary{href: "#{@package.label}", target: "_blank"} Этикетка
      %a.badge.badge-success{:href => wa_message(@package.profile.phone, "#{@package.profile.name}, добрый день! Стоимость доставки посылки №#{@package.tracking_code} - #{@cost["price"]} EUR (тарифная зона #{@cost["tariff_zone"]}). Ссылка на оплату придет по смс, отслеживание - в личном кабинете."), target: "_blank" } WA стоимость отправки #{@cost["price"]}
      Оплата доставки: #{human_boolean(@package.delivery_paid)}

    .card-body
      %p
        id Посылки:
        = @package.id
        Profile:
        = @package.profile.full_name_with_id
        Shipping type:
        = @package.shipping_type
        Shipping price:
        = "#{@package.package_cost} EUR"

      %p
        = @package.h
        x
        = @package.w
        x
        = @package.l
        Вес:
        = @package.weight

      %p
        Трек-код
        = @package.tracking_code
        Номер коробки
        = @package.shipping_status

      - @status.each do |s|
        = s["Date"]
        = s["Name"]
        = s["Comment"]
        %br


      %p
        Boxberry API
        = @cost
      %p

      %p
        Активный? #{human_boolean(@package.active)}


      %p
        City code
        = @package.city_code
        Boxberry office
        = @package.profile.boxberry_office_id

    .card-footer
      - @deals.each do |deal|
        .label
          = link_to "##{deal.item.id} #{deal.item.item_name.name} #{deal.item.brand.name} #{deal.item.color.name}", item_path(deal.item), target: '_blank'
          = link_to deal.profile.full_name, profile_path(deal.profile)
          = link_to deal.id, deal_path(deal)
  -# %p
  -#   %b User:
  -#   -# = @package.user_id
  -#   = @profile.name
  -# %p
  -#   %b Item:
  -#   -# = @package.item_id
  -#   = @item.item
  -#   = @item.brand
  -#   = @user.email
  -# %p
  -#   %b Shipping type:
  -#   = @package.shipping_type
  -# %p
  -#   %b Pup code:
  -#   = @package.pup_code
  -# = link_to('Запросить документы', controller: 'packages', action: "parcel_create_foreign")
  = link_to 'Edit', edit_package_path(@package)
  \|
  = link_to 'Back', packages_path
