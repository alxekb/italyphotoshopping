.container
  %h1
    Товары
  .block
    .cards
      - @items.each do |item|
        .card
          = image_tag(item.image, size: "96x128")
          %h2
            = item.item
            %span= item.brand
            %span= item.name
          %h3
            = item.price
            %span РУБ.
          %h3= link_to 'Show >', item_path(item), class: "btn btn-success"
