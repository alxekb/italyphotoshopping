.container
  %h1
    Товары
  .block
    .cards
      - @items.each do |item|
        .card
          .card-body
            - if item.image.attachment.nil?
              = image_tag('/ek.jpg', size: "170x230")
            - else
              = image_tag(item.image.variant(resize:"170x230"))
            %h2
              = item.item
              %span= item.brand.name if item.brand_id?
              %span= item.name if item.name?
            %h3
              = item.price if item.price?
              %span РУБ.
            %h3= link_to 'Show >', item_path(item), class: "btn btn-success"
