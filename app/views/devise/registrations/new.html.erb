<div class="container w40">
  <h2>Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form justify-content-center') do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :'Пароль' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :'подтверждение пароля' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: "button btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
