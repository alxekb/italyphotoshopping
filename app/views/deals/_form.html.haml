= bootstrap_form_for @deal do |f|
  - if @deal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@deal.errors.count, "error")} prohibited this deal from being saved:"
      %ul
        - @deal.errors.full_messages.each do |message|
          %li= message

  .field
    = f.select :profile_id, Profile.order(:name).map { |p| [[p.name, p.surname, p.phone].join(' '), p.id] }, prompt: true
  .field
    = f.select :item_id, Item.order(:name).map { |i| [[i.item_name.name, i.name, i.brand.name, i.color.name, i.size.name].join(' '), i.id] }, prompt: true
  .field
    = f.text_field :bye
  .field
    = f.text_field :sell
  .field
    = f.text_field :status
  .field
    = f.text_field :messenger
  .field
    = f.check_box :paid
  .field
    = f.check_box :ransom
  .field
    = f.text_area :comment
  .field
    = f.text_field :payment_method
  .actions
    = f.submit 'Save', class: 'button btn btn-secondary btn-block'
