= bootstrap_form_for @deal do |f|
  - if @deal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@deal.errors.count, "error")} prohibited this deal from being saved:"
      %ul
        - @deal.errors.full_messages.each do |message|
          %li= message

  .field
    = f.select :profile_id, Profile.order(:name).map { |p| [[p.name, p.surname, p.phone, p.email].join(' '), p.id] }, prompt: true, label: 'Профиль пользователя'
  .field
    = f.select :item_id, Item.order(:name).map { |i| [[i.item_name.name, i.name, i.brand.name, i.color.name, i.size.name].join(' '), i.id] }, prompt: true, label: 'Лот'
  .field
    = f.number_field :bye, placeholder: '100 (EUR)', label: 'Купили за (Евро)'
  .field
    = f.number_field :sell, placeholder: '200 (EUR)', label: 'Продали за (Евро)'
  .field
    = f.text_field :status, placeholder: 'выкуплен', label: 'Статус сделки'
  .field
    = f.text_field :messenger, placeholder: 'телефон или инста', label: 'Способ общения с клиентом'

  .field
    = f.text_area :comment, placeholder: 'ждем еще что-то',label: 'Комментарий по сделке'
  .form-row
    .col-6
      = f.text_field :payment_method, placeholder: 'Tinkoff'
    .col-auto.align-self-center
      = f.check_box :paid
    .col-auto.align-self-center
      = f.check_box :ransom
  .form-row
    .col
      = f.number_field :h, placeholder: '15 (cm)', label: 'Высота в сантиметрах'
    .col
      = f.number_field :w, placeholder: '15 (cm)', label: 'Ширина в сантиметрах'
    .col
      = f.number_field :l, placeholder: '15 (cm)', label: 'Длина в сантиметрах'
  .field
    = f.number_field :weight, placeholder: '1200 (gr)', label: 'Вес в граммах'
  .fiels
    = f.select :package_id, Package.order(:id).map { |p| [p.id, p.id]}, prompt: true, label: 'Посылка, в которой сделка поедет к клиенту'
  .actions
    = f.submit 'Save', class: 'button btn btn-secondary btn-block'
