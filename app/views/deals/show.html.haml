.section
  %p#notice= notice

  %p
    %b Profile:
    = @deal.profile.name if @deal.profile.name?
    = @deal.profile.surname if @deal.profile.surname?
    = @deal.profile.phone if @deal.profile.phone?
    = @deal.profile.email if @deal.profile.email?
  %p
    %b Item:
    = link_to @deal.item.name, item_path(@deal.item.id)
  %p
    %b Bye:
    = @deal.bye
  %p
    %b Sell:
    = @deal.sell
  %p
    %b Стоимость Доставки
    = @cost["price"]
    EUR
  %p
    %b Status:
    = @deal.status
  %p
    %b Messenger:
    = @deal.messenger
  %p
    %b Paid:
    = @deal.paid
  %p
    %b Ransom:
    = @deal.ransom
  %p
    %b Comment:
    = @deal.comment
  %p
    %b Payment method:
    = @deal.payment_method

  -# = shipping_cost

  = link_to 'Edit', edit_deal_path(@deal)
  \|
  = link_to 'Back', deals_path
